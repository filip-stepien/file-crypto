<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xyz.cursedman.filecrypto.HelloController">
   <TabPane tabClosingPolicy="UNAVAILABLE">
     <tabs>
       <Tab text="Encrypt">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0">
                  <children>
                     <VBox spacing="10.0">
                        <children>
                            <HBox alignment="CENTER" spacing="20.0">
                              <VBox layoutX="652.0" layoutY="30.0" spacing="10.0">
                                 <children>
                                    <VBox spacing="5.0">
                                       <children>
                                           <Label text="Items to encrypt">
                                             <font>
                                                <Font name="System Bold" size="12.0" />
                                             </font>
                                          </Label>
                                          <Separator prefWidth="200.0" />
                                       </children>
                                    </VBox>
                                    <VBox>
                                       <children>
                                           <TableView fx:id="fileTableView" cache="true" prefWidth="600.0">
                                             <columns>
                                                <TableColumn fx:id="fileIconColumn" prefWidth="25.0" resizable="false" style="-fx-alignment: CENTER;" />
                                               <TableColumn fx:id="fileNameColumn" prefWidth="-1.0" text="Name" />
                                               <TableColumn fx:id="fileSizeColumn" prefWidth="-1.0" text="Size" />
                                                 <TableColumn fx:id="fileLastModifiedColumn" prefWidth="-1.0" text="Last modified" />
                                             </columns>
                                             <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                             </columnResizePolicy>
                                           </TableView>
                                          <ToolBar style="-fx-border-color: -fx-box-border; -fx-border-width: 0 1 0 1;">
                                            <items>
                                                <HBox alignment="CENTER_LEFT" prefWidth="600.0" spacing="10.0">
                                                   <children>
                                                      <Label text="0 items" HBox.hgrow="ALWAYS" />
                                                      <HBox alignment="TOP_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                                                         <children>
                                                            <Button layoutX="360.0" layoutY="10.0" mnemonicParsing="false" text="Add items..." />
                                                            <Button mnemonicParsing="false" text="Remove selected" />
                                                          <Button mnemonicParsing="false" text="Remove all" />
                                                         </children>
                                                      </HBox>
                                                   </children>
                                                   <padding>
                                                      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                                   </padding>
                                                </HBox>
                                            </items>
                                          </ToolBar>
                                       </children>
                                    </VBox>
                                 </children>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                              </VBox>
                                <VBox prefHeight="100.0" prefWidth="250.0" spacing="10.0">
                                 <VBox spacing="5.0">
                                    <children>
                                       <Label text="Encryption options">
                                          <font>
                                             <Font name="System Bold" size="12.0" />
                                          </font>
                                       </Label>
                                       <Separator prefWidth="200.0" />
                                    </children>
                                    <opaqueInsets>
                                       <Insets />
                                    </opaqueInsets>
                                 </VBox>
                                 <VBox spacing="5.0">
                                    <children>
                                       <Label text="Vault password" />
                                       <HBox spacing="10.0">
                                          <children>
                                             <PasswordField promptText="Enter password..." HBox.hgrow="ALWAYS" />
                                             <Button mnemonicParsing="false" text="Show" />
                                          </children>
                                       </HBox>
                                    </children>
                                 </VBox>
                                 <VBox layoutX="10.0" layoutY="37.0" spacing="5.0">
                                    <children>
                                       <Label text="Encryption algorithm" />
                                       <ComboBox prefWidth="250.0" promptText="Choose algorithm..." />
                                    </children>
                                 </VBox>
                                 <TitledPane prefWidth="200.0" text="Alogirthm settings">
                                    <content>
                                       <ScrollPane hbarPolicy="NEVER" prefHeight="1000.0" prefWidth="250.0">
                                         <content>
                                           <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="250.0">
                                                <children>
                                                   <VBox spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="15.0">
                                                      <padding>
                                                         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                      </padding>
                                                   </VBox>
                                                </children>
                                             </AnchorPane>
                                         </content>
                                       </ScrollPane>
                                    </content>
                                 </TitledPane>
                                </VBox>
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
                                <children>
                                    <StackPane maxWidth="Infinity" HBox.hgrow="ALWAYS">
                                        <children>
                                            <ProgressBar maxWidth="Infinity" prefHeight="25.0" progress="0.76" style="-fx-accent: #01D328;" />
                                            <Label text="Done" />
                                        </children>
                                    </StackPane>

                                    <Button mnemonicParsing="false" prefWidth="80.0" text="Encrypt" />
                                </children>
                                <padding>
                                    <Insets bottom="10.0" top="10.0" />
                                </padding>
                            </HBox>
                        </children>
                        <padding>
                           <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                     </VBox>
                  </children>
               </AnchorPane>
         </content>
       </Tab>
       <Tab text="Decrypt">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0">
                  <children>
                     <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <top>
                           <VBox spacing="10.0" BorderPane.alignment="CENTER">
                              <children>
                                 <VBox spacing="5.0">
                                    <children>
                                       <Label text="Decrypt file">
                                          <font>
                                             <Font name="System Bold" size="12.0" />
                                          </font>
                                       </Label>
                                       <Separator prefWidth="200.0" />
                                    </children>
                                 </VBox>
                                 <VBox spacing="5.0">
                                    <children>
                                       <Label text="Encrypted file" />
                                       <HBox alignment="CENTER_LEFT" spacing="10.0">
                                          <children>
                                             <TextField editable="false" prefWidth="250.0" promptText="Select or drag a file here..." />
                                             <Button mnemonicParsing="false" prefWidth="50.0" text="Select" />
                                          </children>
                                       </HBox>
                                    </children>
                                 </VBox>
                                 <VBox spacing="5.0">
                                    <children>
                                       <Label text="Output path" />
                                       <HBox alignment="CENTER_LEFT" spacing="10.0">
                                          <children>
                                             <TextField editable="false" prefWidth="250.0" promptText="Select path..." />
                                             <Button mnemonicParsing="false" prefWidth="50.0" text="Select" />
                                          </children>
                                       </HBox>
                                    </children>
                                 </VBox>
                                 <VBox spacing="5.0">
                                    <children>
                                       <Label text="Vault password" />
                                       <HBox spacing="10.0">
                                          <children>
                                             <PasswordField maxWidth="250.0" promptText="Enter password..." HBox.hgrow="ALWAYS" />
                                             <Button mnemonicParsing="false" prefWidth="50.0" text="Show" />
                                          </children>
                                       </HBox>
                                    </children>
                                 </VBox>
                              </children>
                           </VBox>
                        </top>
                        <padding>
                           <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                         <bottom>
                             <HBox alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
                                 <children>
                                     <StackPane maxWidth="Infinity" HBox.hgrow="ALWAYS">
                                         <children>
                                             <ProgressBar maxWidth="Infinity" prefHeight="25.0" progress="0.76" style="-fx-accent: #01D328;" />
                                             <Label text="Done" />
                                         </children>
                                     </StackPane>

                                     <Button mnemonicParsing="false" prefWidth="80.0" text="Decrypt" />
                                 </children>
                                 <padding>
                                     <Insets bottom="10.0" top="10.0" />
                                 </padding>
                             </HBox>
                         </bottom>
                     </BorderPane>
                  </children></AnchorPane>
         </content>
       </Tab>
     </tabs>
   </TabPane>
</VBox>
