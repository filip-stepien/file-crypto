<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox
    spacing="10.0"
    xmlns="http://javafx.com/javafx/17.0.12"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="xyz.cursedman.filecrypto.controllers.FileTableController"
>
    <VBox spacing="5.0">
        <Label text="Items to encrypt">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Separator prefWidth="200.0" />
    </VBox>
    <VBox>
        <TableView fx:id="fileTableView" prefWidth="600.0">
            <columns>
                <TableColumn
                    fx:id="fileIconColumn"
                    prefWidth="25.0"
                    resizable="false"
                    sortType="DESCENDING"
                    style="-fx-alignment: CENTER;"
                />
                <TableColumn fx:id="fileNameColumn" prefWidth="-1.0" text="Name" />
                <TableColumn fx:id="fileSizeColumn" prefWidth="-1.0" text="Size" />
                <TableColumn fx:id="fileLastModifiedColumn" prefWidth="-1.0" text="Last modified" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <ToolBar style="-fx-border-color: -fx-box-border; -fx-border-width: 0 1 0 1;">
            <HBox alignment="CENTER_LEFT" prefWidth="600.0" spacing="10.0">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
                <Label fx:id="itemsCounter" text="0 items" HBox.hgrow="ALWAYS" />
                <HBox alignment="TOP_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                    <Button
                        layoutX="360.0"
                        layoutY="10.0"
                        mnemonicParsing="false"
                        onAction="#handleAddFiles"
                        text="Add files..."
                    />
                    <Button
                        layoutX="360.0"
                        layoutY="10.0"
                        mnemonicParsing="false"
                        onAction="#handleAddFolders"
                        text="Add folders..."
                    />
                    <Button
                        mnemonicParsing="false"
                        text="Remove selected"
                        fx:id="removeButton"
                        onAction="#handleRemoveSelectedItems"
                    />
                    <Button mnemonicParsing="false" text="Remove all" onAction="#handleRemoveAllItems" />
                </HBox>
            </HBox>
        </ToolBar>
    </VBox>
</VBox>
