<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox
    xmlns="http://javafx.com/javafx/17.0.12"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="xyz.cursedman.filecrypto.controllers.EncryptionSettingsController"
    spacing="10.0"
    BorderPane.alignment="CENTER"
>
    <VBox spacing="5.0">
        <Label text="Decrypt file">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
        <Separator prefWidth="200.0"/>
    </VBox>
    <VBox spacing="5.0">
        <Label text="Encrypted file"/>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <TextField editable="false" prefWidth="250.0" promptText="Select or drag a file here..."/>
            <Button mnemonicParsing="false" prefWidth="50.0" text="Select"/>
        </HBox>
    </VBox>
    <VBox spacing="5.0">
        <Label text="Output path"/>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <TextField editable="false" prefWidth="250.0" promptText="Select path..."/>
            <Button mnemonicParsing="false" prefWidth="50.0" text="Select"/>
        </HBox>
    </VBox>
    <VBox spacing="5.0">
        <Label text="Vault password"/>
        <HBox spacing="10.0">
            <PasswordField maxWidth="250.0" promptText="Enter password..." HBox.hgrow="ALWAYS"/>
            <Button mnemonicParsing="false" prefWidth="50.0" text="Show"/>
        </HBox>
    </VBox>
</VBox>