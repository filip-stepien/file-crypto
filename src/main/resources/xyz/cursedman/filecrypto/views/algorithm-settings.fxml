<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox
    xmlns="http://javafx.com/javafx/17.0.12"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="xyz.cursedman.filecrypto.controllers.AlgorithmSettingsController"
    spacing="10"
>
    <VBox layoutX="10.0" layoutY="37.0" spacing="5.0">
        <Label text="Encryption algorithm"/>
        <ComboBox prefWidth="250.0" promptText="Choose algorithm..."/>
    </VBox>
    <TitledPane prefWidth="200.0" text="Algorithm settings">
        <ScrollPane hbarPolicy="NEVER" prefHeight="1000.0" prefWidth="250.0">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="250.0">
                <VBox fx:id="settingsContainer" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="15.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </AnchorPane>
        </ScrollPane>
    </TitledPane>
</VBox>
